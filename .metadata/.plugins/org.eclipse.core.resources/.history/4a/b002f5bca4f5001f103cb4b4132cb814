package com.korea.attendance.model;

import java.util.List;

import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Data;
import lombok.NoArgsConstructor;

@Data
@NoArgsConstructor
@AllArgsConstructor
@Builder
public class SurveyQuestion {
    private int questionId;
    private int surveyId;
    private String questionText;
    private String questionType;  // multiple_choice, text
    private List<String> options; // 객관식 선택지
    private Integer minSelect; // 최소 선택 개수 (라디오 버튼 or 체크박스 구분)
    private Integer maxSelect; // 최대 선택 개수 (체크박스 한정)
}
}
